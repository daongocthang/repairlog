<div id="toolbar">
    <div class="btn-group" style="margin-right: 10px">
        <a href="#" id="menuAdd" class="btn btn-default" data-toggle="modal" data-target="#modalNew"
            ><span class="glyphicon glyphicon-plus"></span> Thêm
        </a>
        <a href="#" id="menuDel" class="btn btn-danger disabled" data-toggle="modal" data-target="#modalDelete"
            ><span class="glyphicon glyphicon-trash"></span> Xóa
        </a>
    </div>
    <div class="btn-group">
        <div id="menuOthers" class="dropdown">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                Tác vụ khác <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <% statuses.forEach(status => { %>
                <li class="dropdown-item hidden" data-url="/api/v1/status/<%= status.slug %>">
                    <a href="#">Đánh dấu <%= status.name %></a>
                </li>
                <% }) %>
                <li class="dropdown-header">Chọn thiết bị để xem thêm tác vụ</li>
            </ul>
        </div>
    </div>
</div>

<table
    id="table"
    data-toolbar="#toolbar"
    data-cookie="true"
    data-cookie-id-table="saveId"
    data-undefined-text=""
    data-url="<%= url %>"
    data-pagination="true"
    data-page-size="100"
    data-page-list="[50, 100, 200, 500, All]"
    data-show-columns="true"
    data-search="true"
    data-visible-search="true"
    data-search-highlight="true"
    data-click-to-select="false"
>
    <thead>
        <tr>
            <th data-field="state" data-checkbox="true"></th>
            <th data-field="receiptNo" data-sortable="true">Mã phiếu</th>
            <th data-field="model" data-sortable="true">Tên TB</th>
            <th data-field="serial" data-sortable="true">Số Sêri</th>
            <th data-field="description" data-sortable="true">Mô tả lỗi</th>
            <th data-field="newSerial" data-sortable="true">Sêri mới</th>
            <th data-field="method" data-sortable="true">Biện pháp</th>
            <th data-field="remark" data-sortable="true">Chi tiết SC</th>
            <th data-field="status" data-sortable="true">Trạng thái</th>
            <th data-field="createdAt" data-sortable="true">Ngày lập</th>
        </tr>
    </thead>
</table>
