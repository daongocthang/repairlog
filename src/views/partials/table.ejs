<div id="toolbar">
    <div class="btn-group" style="margin-right: 10px">
        <a
            href="#"
            class="btn btn-default btn-modal"
            data-title="Tiếp nhận"
            data-body="api/v1/component/create .modal-container"
            data-submit='{"class":"btn btn-primary","text": "Tiếp nhận","handler":"onModalSubmit"}'
            ><i class="fa fa-plus"></i> Thêm
        </a>
        <a
            href="#"
            id="menuDel"
            class="btn btn-danger btn-modal disabled"
            data-title="Tiếp nhận"
            data-body="/templates/modals/create.html"
            data-submit='{"class":"btn btn-danger","text": "Xóa"}'
            ><i class="fa fa-trash"></i> Xóa
        </a>
    </div>
    <div class="btn-group">
        <div id="menuOthers" class="dropdown">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tác vụ khác</button>
            <div class="dropdown-menu">
                <% statuses.forEach(status => { %>
                <a class="dropdown-item hidden" href="#" data-url="/api/v1/status/<%= status.slug %>">
                    Đánh dấu <%= status.name %>
                </a>
                <% }) %>
                <li class="dropdown-header">Chọn thiết bị để xem thêm tác vụ</li>
            </div>
        </div>
    </div>
</div>

<table
    id="table"
    data-classes="table table-striped table-bordered"
    data-toolbar="#toolbar"
    data-cookie="true"
    data-cookie-id-table="saveId"
    data-undefined-text=""
    data-url="<%= url %>"
    data-pagination="true"
    data-page-size="100"
    data-page-list="[50, 100, 200, 500, All]"
    data-show-columns="true"
    data-search="true"
    data-visible-search="true"
    data-search-highlight="true"
    data-click-to-select="false"
></table>
